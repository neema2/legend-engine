function <<PCT.test>> meta::pure::functions::relation::tests::window::testBasicWindowFrame<T|m>(f:Function<{Function<{->T[m]}>[1]->T[m]}>[1]):Boolean[1]
{
    let expr = {
                | let tds = #TDS
                  id, grp, name
                  1, 2, A
                  2, 1, B
                  3, 3, C
                  4, 4, D
                  5, 2, E
                  6, 1, F
                  7, 3, G
                  8, 1, H
                  9, 5, I
                  10, 0, J
                #;
                
                $tds;
               };

    let res = $f->eval($expr);

    assertEquals( '#TDS\n'+
                  '   id,grp,name\n'+
                  '   1,2,A\n'+
                  '   2,1,B\n'+
                  '   3,3,C\n'+
                  '   4,4,D\n'+
                  '   5,2,E\n'+
                  '   6,1,F\n'+
                  '   7,3,G\n'+
                  '   8,1,H\n'+
                  '   9,5,I\n'+
                  '   10,0,J\n'+
                  '#', $res->toString());
}

